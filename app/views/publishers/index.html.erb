<% provide(:title, "Listing Publishers") %>
<% provide(:headline, "Listing Publishers") %>
<% provide(:icon, "unchecked") %>
<p id="notice"><%= notice %></p>

<h1>Listing Publishers</h1>

<table>
  <thead>
    <tr>
      <th>First</th>
      <th>Last</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Company</th>
      <th>Position</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.first %></td>
        <td><%= publisher.last %></td>
        <td><%= publisher.address %></td>
        <td><%= publisher.phone %></td>
        <td><%= publisher.company %></td>
        <td><%= publisher.position %></td>
        <td><%= publisher.note %></td>
        <td><%= link_to 'Show', publisher %></td>
        <td><%= link_to 'Edit', edit_publisher_path(publisher) %></td>
        <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publisher', new_publisher_path %>

<% provide(:title, "Link") %>
<% provide(:headline, "Link") %>
<% provide(:icon, "link") %>
<div class='row'>
  <div class='col-sm-12'>
    <form class='form' style='margin-bottom: 0;'>
      <fieldset>
        <div class='col-sm-4'>
          <div class='box'>
            <div class='lead'>
              <i class='icon-link text-contrast'></i>
              Link Information 
            </div>
            <small class='text-muted'>
              This is the information associated with this link, including the URL, the date it was created, 
                the cpm, the title associated with the link, its category, and whether or not it is used. 
            </small>
          </div>
        </div>
        <div class='col-sm-7 col-sm-offset-1'>
          <div class='form-group'>
            <label>URL:</label>
            <%= @link.url %>
          </div>
          <div class='form-group'>
            <label>Date:</label>
            <%= @link.date %>
          </div>
          <div class='form-group'>
            <label>CPM:</label>
            $<%= @link.cpm %>/1000 clicks
          </div>
          <div class='form-group'>
            <label>Title:</label>
            <%= @link.title %>
          </div>
          <div class='form-group'>
            <label>Category:</label>
            <%= @link.category %>
          </div>
          <div class='form-group'>
            <label>Used:</label>
            <%= @link.used %>
          </div>
        </div>
      </fieldset>
      <div class='form-actions'>
        <div class='row'>
          <div class='col-sm-7 col-sm-offset-5'>
              <%= link_to 'Edit', edit_link_path(@link), class: "btn btn-primary btn-lg" %>
        </div>
        </div>
      </div>
    </form>
  </div>
</div>
<style>
	td{
		vertical-align: text-top;
		padding: 20px;
		position: relative;
	}
	.topbar{
		height: 125px;
		text-align: center;
	}
	.sidebar{
		width: 25%;
		padding: 20px;
	}
	.main{
		width: 100%;
		height: 100%;
	}
	.cell{
		width: 50%;
		height: 50%;
	}
	.top{
		position: absolute;
		top: 0;
	}
	.bot{
		position: absolute;
		bottom: 20px;
		right: 20px;
	}
</style>
<table width="100%" height="100%" border=1><tr>
	<td rowspan=2 style="sidebar">
        <div style="text-align:center">
			<%= gravatar_for(current_user) %><br><br>
            <h2><%= current_user.first %> <%= current_user.last %></h2>
		</div>
		<ul>
			<li>Some</li>
			<li>Important</li>
			<li>Links</li>
			<li><%= link_to "User Settings", controller: "users", action: "edit", id: User.find(params[:id]) %></li>
		</ul>
		</div>
    </td>
	<td class="topbar">
		<h1>User Dashboard</h1>
	</td></tr>
    <tr>
    <td>
        <table border=1 class="main">
            <tr>
                <td class="cell">
                    <div class="top"><h2>Available Links</h2></div>
					<div class="bot">0 new links</div>
                </td>
                <td class="cell">
                    <div class="top"><h2>Your Links</h2></div>
					<div class="bot">0 current links</div>
                </td>
            </tr>
            <tr>
                <td class="cell">
                    <div class="top"><h2>Your Statistics</h2></div>
					<div class="bot">0 clicks</div>
                </td>
                <td class="cell">
                    <div class="top"><h2>Payments</h2></div>
					<div class="bot">Balance: $0.00</div>
                </td>
            </tr>
        </table>
    </td>
</tr></table>
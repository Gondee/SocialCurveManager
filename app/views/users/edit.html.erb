<% provide(:title, "Edit User") %>
<% provide(:headline, "Edit User") %>
<% provide(:icon, "gear") %>
<!--<h1>Update Your Profile</h1>-->

<div class="row">
  <!--<div class="col-md-6 col-md-offset-3">-->
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      
      
      <div class='row'>
            <div class='col-sm-3 col-lg-2'>
              <div class='box'>
                <div class='box-content'>
                  <img class="img-responsive" width=230 height=230 src=<%= "#{gravatar_url(current_user)}" %> />
                </div>
              </div>
            </div>
            <div class='col-sm-9 col-lg-10'>
              <div class='box'>
                <div class='box-content box-double-padding'>
                  <form class='form' style='margin-bottom: 0;'>
                    <fieldset>
                      <div class='col-sm-4'>
                        <div class='lead'>
                          <i class='icon-github text-contrast'></i>
                          Sign In Information
                        </div>
                        <small class='text-muted'>
                          Edit your sign-in information here. In order to change your password, check the Change Your Password box.
                          If you feel the security of your account has been compromised, it may be a good idea to change your password. 
                        </small>
                      </div>
                      <div class='col-sm-7 col-sm-offset-1'>
                        
                        <div class='form-group'>
                          <label>E-mail</label>
                          <%= f.email_field :email, class: 'form-control', placeholder: "E-mail" %>
                        </div>
                        
                        
                        <hr class='hr-normal'>
                        <div class='form-group'>
                          <div class='controls'>
                            <div class='checkbox'>
                              <label>
                                <input data-target='#change-password' data-toggle='collapse' id='changepasswordcheck' type='checkbox' value='option1'>
                                Change Your Password?
                              </label>
                            </div>
                          </div>
                        </div>
                        <div class='collapse' id='change-password'>
                          <div class='form-group'>
                          <label>Password</label>
                          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                        </div>
                        <div class='form-group'>
                          <label>Confirm Password</label>
                          <%= f.password_field :password, class: 'form-control', placeholder: 'Confirm Password' %>
                        </div>
                        </div>
                      </div>
                    </fieldset>
                    <hr class='hr-normal'>
                    <fieldset>
                      <div class='col-sm-4'>
                        <div class='lead'>
                          <i class='icon-user text-contrast'></i>
                          Contact Information
                        </div>
                        <small class='text-muted'>
                          Edit your contact information here.
                          If any information is incorrect and/or outdated, please click the Edit button below.
                          Your contact information is important, so we may be able to contact you about your account.
                        </small>
                      </div>
                      <div class='col-sm-7 col-sm-offset-1'>
                        <div class='form-group'>
                          <label>First name</label>
                          <%= f.text_field :first , class: 'form-control' %>
                        </div>
                        <div class='form-group'>
                          <label>Last name</label>
                          <%= f.text_field :last, class: 'form-control' %>
                        </div>
                        <div class='form-group'>
                          <label>Address</label>
                          <%= f.text_field :address, class: 'form-control' %>
                        </div>
                        <div class='form-group'>
                          <label>Contact Phone</label>
                          <%= f.text_field :phone, class: 'form-control' %>
                        </div>
                        <div class='form-group'>
                          <label>Social Media URL</label>
                          <%= f.text_field :url, class: 'form-control' %>
                        </div>
                      </div>
                    </fieldset>
                    <div class='form-actions form-actions-padding' style='margin-bottom: 0;'>
                      <div class='text-right'>
                        <%= f.submit "Save changes", class: "btn btn-primary btn-lg" %>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
 <% end %>

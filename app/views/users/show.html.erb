<% provide(:title, "User") %>
<% provide(:headline, "User") %>
<% provide(:icon, "user") %>
 <div class='row'>
            <div class='col-sm-3 col-lg-2'>
              <div class='box'>
                <div class='box-content'>
                  <img class="img-responsive" width=230 height=230 src=<%= "#{gravatar_url(current_user)}" %> />
                </div>
              </div>
            </div>
            <div class='col-sm-9 col-lg-10'>
              <div class='box'>
                <div class='box-content box-double-padding'>
                  <form class='form' style='margin-bottom: 0;'>
                    <fieldset>
                      <div class='col-sm-4'>
                        <div class='lead'>
                          <i class='icon-github text-contrast'></i>
                          Sign In Information
                        </div>
                        <small class='text-muted'>
                          This is your sign in information. For security reasons, only your email is displayed here. 
                          If you have forgotten or otherwise lost your password, please click the edit button down below. 
                          You will be redirected to a page were you can update your password as well as your email if need be.
                        </small>
                      </div>
                      <div class='col-sm-7 col-sm-offset-1'>
                        <div class='form-group'>
                          <label>E-mail:</label>
                          <%= @user.email %>
                        </div>
                      </div>
                    </fieldset>
                    <hr class='hr-normal'>
                    <fieldset>
                      <div class='col-sm-4'>
                        <div class='lead'>
                          <i class='icon-user text-contrast'></i>
                          Contact Information
                        </div>
                        <small class='text-muted'>
                          This is your contact information. Your name, address, phone number, and URL are displayed here. 
                          If you find that any of this information is incorrect or outdated, please click the edit button
                          down below and update this information. It is important that this information remains accurate and correct so 
                          that we may contact you.
                        </small>
                      </div>
                      <div class='col-sm-7 col-sm-offset-1'>
                        <div class='form-group'>
                          <label>First name:</label>
                          <%= @user.first %>
                        </div>
                        <div class='form-group'>
                          <label>Last name:</label>
                          <%= @user.last %>
                        </div>
                        <div class='form-group'>
                          <label>Address:</label>
                          <%= @user.address %>
                        </div>
                        <div class='form-group'>
                          <label>Contact Phone:</label>
                          <%= @user.phone %>
                        </div>
                        <div class='form-group'>
                          <label>Social Media URL:</label>
                          <%= @user.url %>
                        </div>
                        <!-- IF ADMIN SEE FLAGS -->
                      </div>
                    </fieldset>
                    <div class='form-actions form-actions-padding' style='margin-bottom: 0;'>
                      <div class='text-right'>
                        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary btn-lg" %>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>




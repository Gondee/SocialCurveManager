<!DOCTYPE html>
  <html>
    <head>
      <!-- this enables responsive features in browser -->
      <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
      <%= favicon_link_tag %>
      <title><%= yield :title %> - SocialCurve</title>
       
      <!-- your & Flatty stylesheets -->
      <%= stylesheet_link_tag :flatty %>
      
      <!-- your & Flatty javascripts -->
      <%= javascript_include_tag 'application.js' %>
      
      <!-- if you are going to support IE8 you must include these files -->
      <!--[if lt IE 9]>
        <script src='assets/javascripts/ie/html5shiv.js' type='text/javascript'></script>
        <script src='assets/javascripts/ie/respond.min.js' type='text/javascript'></script>
      <![endif]-->
    </head>
    <body>
      <!-- your content goes here -->
      <%= render 'layouts/header' %>
      <div id="wrapper">
        <div id="main-nav-bg"></div>
        <%= render 'layouts/nav' %>
        <section id="content">
            <div class='container'>
              <div class='col-xs-12'>
                <div class='row'>
                  <div class='col-sm-12'>
                    <div class='page-header'>
                      <h1 class='pull-left'>
                        <i class='icon-<%= yield :icon %>'></i>
                        <span><%= yield :headline %></span>
                      </h1>
                      <div class='pull-right'></div>
                    </div>
                  </div>
                </div>
                <% flash.each do |message_type, message| %>
                  <% @content = "<a class='close' data-dismiss='alert' href='#'>&times;</a><ul><li>#{message}</li></ul>" %>
                  <% if message_type == "danger" %>
                    <div class='alert alert-danger alert-dismissable'><%= @content %></div>
                  <% elsif message_type == "success" %>
                    <div class='alert alert-success alert-dismissable'><%= @content %></div>
                  <% elsif message_type == "info" %>
                    <div class='alert alert-info alert-dismissable'><%= @content %></div>
                  <% else %>
                    <div class='alert alert-warn alert-dismissable'></div><%= @content %></div>
                  <% end %>
                <% end %>
                <%= yield %>
              <br><br>
              <%= render 'layouts/footer' %>
            </div>
            </div>
        </section>
      </div>
    </body>
  </html>
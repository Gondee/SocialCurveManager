<!DOCTYPE html>
  <html>
    <head>
      <!-- this enables responsive features in browser -->
      <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
      <title>SocialCurve</title>
       
      <!-- your & Flatty stylesheets -->
      <%= stylesheet_link_tag :flatty %>
      
      <!-- if you are going to support IE8 you must include these files -->
      <!--[if lt IE 9]>
        <script src='assets/javascripts/ie/html5shiv.js' type='text/javascript'></script>
        <script src='assets/javascripts/ie/respond.min.js' type='text/javascript'></script>
      <![endif]-->
    </head>
    <body>
      <!-- your content goes here -->
      <%= render 'layouts/header' %>
      <div id="wrapper">
        <div id="main-nav-bg"></div>
        <%= render 'layouts/nav' %>
        <section id="content">
            <div class='container'>
              <% flash.each do |message_type, message| %>
                <% if message_type == :danger %>info success danger
                  <div class='alert alert-danger alert-dismissable'>
                <% elsif message_type == :success %>
                  <div class='alert alert-success alert-dismissable'>
                <% elsif message_type == :info %>
                  <div class='alert alert-info alert-dismissable'>
                <% else %>
                  <div class='alert alert-warn alert-dismissable'>
                <% end %>
                <a class='close' data-dismiss='alert' href='#'>&times;</a>
                <ul><li><%= message %></li></ul>
                </div>
              <% end %>
              <%= yield %>
              <%= render 'layouts/footer' %>
            </div
        </section>
      </div>
    </body>
        <%= javascript_include_tag 'application.js' %>
      <!-- your & Flatty javascripts -->
    </body>
  </html>
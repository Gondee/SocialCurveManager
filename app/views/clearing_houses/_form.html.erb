<%= form_for(@clearing_house) do |f| %>
  <% if @clearing_house.errors.any? %>
  	<div class='alert alert-danger alert-dismissable'><a class='close' data-dismiss='alert' href='#'>&times;</a>
  		<%= pluralize(@clearing_house.errors.count, "error") %> prohibited this link from being saved:
  		<ul>
  			<% @clearing_house.errors.full_messages.each do |message| %>
  				<li><%= message %></li>
  			<% end %>
  		</ul>
  	</div>
  <% end %>

<div class='row'>
    <div class='col-sm-12'>
      <div class='box bordered-box blue-border'>
        <div class='box-header blue-background'>
          <div class='title'>
            <i class='icon-ban-circle'></i>
            Add New Relationship
          </div>
          <div class='actions'>
            
            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
            </a>
          </div>
        </div>
        <div class='box-content box-double-padding'>
          <form class='form' style='margin-bottom: 0;'>
            <fieldset>
              <div class='col-sm-4'>
                <div class='box'>
                  <div class='lead'>
                    <i class='icon-github text-contrast'></i>
                    Enter A New Association
                  </div>
                  <small class='text-muted'>Entries in this form will result in that USER having access to all of PUBLISHER's content. This means they can checkout the content 
                  and post it to their souces. You can clear individual peices in the List of links</small>
                </div>
              </div>
              <div class='col-sm-7 col-sm-offset-1'>
                <div class='form-group'>
                  <label>Publisher Name: </label>
                   <%= collection_select(:generatedlink, :user_id, User.where("publisher = ? AND admin = ?",true,false), :id, :email, {}, {:multiple => false, :class => 'form-control'} ) %>
                </div>
                <div class='form-group'>
                  <label>Influencer Name: </label>
                   <%= collection_select(:generatedlink, :user_id, User.where("publisher = ? AND admin = ?",false,false), :id, :email, {}, {:multiple => false, :class => 'form-control'} ) %>
                </div>
                <div class='form-group'>
                  <label>Add A Note:  </label>
                  <%= f.text_area :note %>
                </div>
              </div>
            </fieldset>
            <hr class='hr-normal'>
            <div class='form-actions'>
              <div class='row'>
                <div class='col-sm-7 col-sm-offset-5'>
                <%= f.submit "Save changes", class: "btn btn-primary btn-lg" %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>